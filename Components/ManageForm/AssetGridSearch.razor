@typeparam GItem
@inherits ComponentBase

<Row Position="Position.Relative">
    <Column ColumnSize="ColumnSize.Is3">
        <Heading Padding="Padding.Is3.FromBottom" Position="Position.Absolute.Bottom.Is0" Size="HeadingSize.Is4">@Title</Heading>
    </Column>
    <Column ColumnSize="ColumnSize.Is3.WithOffset">
        <Addons>
            <Addon AddonType="AddonType.Start">
                <AddonLabel><Icon Name="IconName.Search" /></AddonLabel>
            </Addon>
            <Addon AddonType="AddonType.Body">
                <TextEdit Placeholder="Search" Text="@SearchString" TextChanged="@OnFilterValueChanged"></TextEdit>
            </Addon>
        </Addons>
    </Column>
</Row>
