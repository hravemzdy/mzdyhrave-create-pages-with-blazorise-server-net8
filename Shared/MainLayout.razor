@using EmployeeManagementApp.Components.Layout

@inherits LayoutComponentBase

<PageTitle>Employee App</PageTitle>

<Layout>
    <LayoutHeader Fixed>
        <TopMenu ThemeEnabledChanged="@OnThemeEnabledChanged"
                ThemeGradientChanged="@OnThemeGradientChanged"
                ThemeRoundedChanged="@OnThemeRoundedChanged"
                ThemeColorChanged="@OnThemeColorChanged" />
    </LayoutHeader>
    <LayoutContent Padding="Padding.Is3.OnX.Is3.FromTop">
        <Row>
            <Column ColumnSize="ColumnSize.Is12">
                @Body
            </Column>
        </Row>
    </LayoutContent>
    <LayoutFooter Fixed>
        <FooterMenu></FooterMenu>
    </LayoutFooter>
</Layout>

